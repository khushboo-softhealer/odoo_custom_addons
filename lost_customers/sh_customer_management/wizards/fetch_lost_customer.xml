<odoo>

    <!-- View fetch.lost.customer form -->
    <record id="view_fetch_lost_customer_form" model="ir.ui.view">
        <field name="name">view.fetch.lost.customer.form</field>
        <field name="model">fetch.lost.customer</field>
        <field name="arch" type="xml">
            <form string="Fetch Lost Customer">
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
                <footer>
                    <button name="add" type="object" string="Add" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

